{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@jam/core": ["./packages/core/src"],
      "@jam/eventbus": ["./packages/eventbus/src"],
      "@jam/agent-runtime": ["./packages/agent-runtime/src"],
      "@jam/voice": ["./packages/voice/src"],
      "@jam/memory": ["./packages/memory/src"],
      "@jam/team": ["./packages/team/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
